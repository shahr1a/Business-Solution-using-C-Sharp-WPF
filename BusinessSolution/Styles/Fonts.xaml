<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:BusinessSolution">

    <!--<FontFamily x:Key="ChantelliAntiqua">pack://application;,,,/Fonts/#Chantelli Antiqua</FontFamily>
    <FontFamily x:Key="CapriolaRegular">pack://application;,,,/Fonts/#Capriola Regular</FontFamily>-->
    
    
    
    <Style TargetType="{x:Type Button}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="Cambria"/>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="BaseStyle1">
        <Setter Property="FontFamily" Value="Cambria"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="BaseTextBlockStyle">
        <Setter Property="FontFamily" Value="Cambria"/>
    </Style>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}"/>
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource BaseStyle1}"/>


</ResourceDictionary>